import random

def choose_word():
    # List of words for the game
    words = ['python', 'hangman', 'developer', 'challenge', 'programming', 'algorithm']
    return random.choice(words)

def hangman():
    word = choose_word()
    word_letters = set(word)  # Unique letters in the word
    guessed_letters = set()
    attempts = 6  # Number of allowed wrong guesses

    print("Welcome to Hangman!")
    print("_ " * len(word))

    while len(word_letters) > 0 and attempts > 0:
        print("\nAttempts left:", attempts)
        print("Guessed letters:", " ".join(sorted(guessed_letters)))

        # Show current word state
        word_list = [letter if letter in guessed_letters else '_' for letter in word]
        print("Current word:", " ".join(word_list))

        guess = input("Guess a letter: ").lower()
        if len(guess) != 1 or not guess.isalpha():
            print("Please enter a single alphabetic character.")
            continue

        if guess in guessed_letters:
            print("You already guessed that letter.")
        elif guess in word_letters:
            print("Good guess!")
            guessed_letters.add(guess)
            word_letters.remove(guess)
        else:
            print("Wrong guess.")
            guessed_letters.add(guess)
            attempts -= 1

    if attempts == 0:
        print("\nYou lost! The word was:", word)
    else:
        print("\nCongratulations! You guessed the word:", word)

if __name__ == "__main__":
    hangman()
